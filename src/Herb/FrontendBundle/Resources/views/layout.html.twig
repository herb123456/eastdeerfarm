<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>{% block title %}花蓮 - 全國養鹿場{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Le styles -->
    {% block css %}
        <link href="{{ asset('bundles/herbfrontend/css/bootstrap.css') }}" rel="stylesheet">
    
        <style>
        
        body {
            padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
            background-color: #eee;
        }
         
        
        .footer {
            border-top: 2px solid #E4E1DA;
            padding-top: 5px;
            margin-top: 10px;
            text-align: center;
        }
        
        .navbar .brand{
            font-size: 24px;
        }
        
        </style>
    {% endblock %}

    
    
    {% block html5shim %}
    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    {% endblock %}

    {% block icon %}
    <!-- Le fav and touch icons -->
    <link rel="shortcut icon" href="./ico/favicon.ico">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="./ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="./ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="./ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="./ico/apple-touch-icon-57-precomposed.png">
    {% endblock %}
    
  </head>

  <body>
    
    {% block navbar %}
    <!--navbar start-->
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          
          <a class="brand" href="{{ path('index') }}">全國養鹿場</a>
        
          
          
                <ul class="nav">
                    <li {% if app.request.attributes.get('_template').get('name') == "index" %}class="active"{% endif %}>
                        <a href="{{ path('index') }}">養鹿場介紹</a>
                    </li>
                    
                    <li {% if app.request.attributes.get('_template').get('name') == "products" %}class="active"{% endif %}><a href="{{ path('products') }}">產品介紹</a></li>
                    
                    <!-- <li><a href="#">產品功效</a></li> -->
                    
                    <li {% if app.request.attributes.get('_template').get('name') == "live" %}class="active"{% endif %}><a href="{{ path('live') }}">養鹿場實況轉播</a></li>
                    
                    <li {% if app.request.attributes.get('_template').get('name') == "map" %}class="active"{% endif %}><a href="{{ path('map') }}">養鹿場地圖</a></li>
                    
                    <li {% if app.request.attributes.get('_template').get('name') == "book" or 
                              app.request.attributes.get('_template').get('name') == "sendMsg" %}class="active"{% endif %}>
                              <a href="{{ path('book') }}">問題留言</a>
                    </li>
                </ul>
        
        </div>
      </div>
    </div>
    <!--navbar end-->
    {% endblock %}
    
    <div class="container" id="container">
    
        {% block content %}{% endblock %}
    
    </div>

    {% block footer %}
    <footer class="footer">
        <p>花蓮縣壽豐鄉溪口村18鄰知亞干15之3號</p>
        <p>0910309206 彭晟育</p>
        <p class="copyright">Copyright @2012 全國養鹿場. All rights reserved.</p>
    </footer>
    {% endblock %}

    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    {% block js %}
        <script src="{{ asset('bundles/herbfrontend/js/jquery.js') }}"></script>
        <script src="{{ asset('bundles/herbfrontend/js/bootstrap.js') }}"></script>
        
        
        
        <script>
        
        $(function(){
            $("ul.nav li > a").hover(function(){
                $(this).css("color", "red");
            }).mouseout(function(){
                $(this).css("color", "");
            });
        });
        
        </script>

    {% endblock %}
  </body>
</html>
