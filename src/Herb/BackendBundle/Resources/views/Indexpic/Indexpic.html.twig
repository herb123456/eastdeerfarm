{% extends 'HerbBackendBundle::backend.layout.html.twig' %}
{% block content %}
    

    <div class="btn-toolbar">
      <button class="btn btn-primary" onClick="location.href='{{ path("newIndexpic") }}' ">新增圖片</button>

    </div>
    <div class="">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>圖片</th>
            <th>簡介</th>
            <th>修改 / 刪除</th>
          </tr>
        </thead>
        <tbody>
          {% for pic in pics %}
              <tr>
                <td style="cursor: pointer;" onClick="location.href='{{ path("editIndexpic") ~ '/' ~ pic.ipId }}'">
                  <img src="{{ asset("indexPic/" ~ pic.ipFilename) }}" alt="" width="400" height="200">
                </td>
                <td style="cursor: pointer;" onClick="location.href='{{ path("editIndexpic") ~ '/' ~ pic.ipId }}'">
                  {{ pic.ipDescription | nl2br }}
                </td>
                <td>
                  <a href="{{ path("editIndexpic") ~ '/' ~ pic.ipId }}">
                    <i class="icon-pencil"></i>
                  </a>
                  <a href="{{ path("deleteIndexpic") ~ '/' ~ pic.ipId }}" role="button" data-toggle="modal" onClick="return confirm('確定要刪除嗎？')">
                    <i class="icon-remove"></i>
                  </a>
                </td>
              </tr>
          {% endfor %}
          
          
          
        </tbody>
      </table>
    </div>
    
    
    
{% endblock %}