{% extends 'HerbBackendBundle::backend.layout.html.twig' %}
{% block css %}
    <style>
    	.errorMsg{
    		border: 3px red dotted;
    		font-size: 15px;
    		line-height: 23px;
    		margin-left: 200px;
    		padding-left: 100px;
    	}
    </style>
{% endblock %}

{% block content %}
	{% if uploadErrorMsg %}
		<div class="errorMsg">
			 {{ uploadErrorMsg }} 
		</div>
	{% endif %}
    <form action="{{ path("newIndexpic") }}" method="POST" {{ form_enctype(form) }} >
        <table class="table book_leave_table">
            
            <tr>
                <td style="text-align:center;"><label class="control-label" for="book_bookEmail">選擇圖片上傳：</label></td>
                <td>{{ form_widget(form.ipFilename) }}</td>
            </tr>
            <tr>
                <td style="text-align:center;"><label class="control-label" for="book_bookContent">簡介：</label></td>
                <td>{{ form_widget(form.ipDescription, {"attr": {"rows": 10}}) }}</td>
            </tr>
            <tr>
                <td colspan="2" style="text-align:center;"><input class="btn btn-large btn-primary" type="submit" value="上傳新圖片！"></td>
            </tr>
        </table>
        {{ form_rest(form) }}
    </form>
{% endblock %}